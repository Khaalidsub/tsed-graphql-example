{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "baseUrl": "./src",
        "lib": ["es2016", "esnext.asynciterable"],
        "typeRoots": ["./node_modules/@types"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"]
}
